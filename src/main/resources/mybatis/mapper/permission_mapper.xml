<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mmko.dao.IPermissionDao">

    <resultMap id="DataMap" type="cn.mmko.po.PermissionPo">
      <id column="permission_id" property="permissionId"/>
        <result column="perm_name" property="permName"/>
        <result column="perm_code" property="permCode"/>
        <result column="perm_type" property="permType"/>
        <result column="url" property="url"/>
        <result column="parent_id" property="parentId"/>
        <result column="description" property="description"/>
    </resultMap>
    <select id="queryPermissionByPermissionIds" resultType="java.lang.String" parameterType="long">
        select perm_code
        from t_permission where permission_id in
        <foreach collection="list" item="item" index="index" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </select>
    <select id="queryPermissionBycode" resultMap="DataMap" parameterType="string">
        select permission_id,perm_code,perm_name,perm_type,url,parent_id
        from t_permission where perm_code in
        <foreach collection="list" item="item" index="index" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </select>


</mapper>